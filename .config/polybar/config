[module/uptime]
type = custom/script
exec = tuptime | grep "Current uptime: " | cut -c 18- | rev |cut -c 32- | rev
interval = 5
label = %output%

format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}

format-prefix = "%{F#E5C07B} "
format-prefix-foreground = ${colors.foreground} 




